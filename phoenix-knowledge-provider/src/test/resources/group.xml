<?xml version="1.0" encoding="GB2312"?>
<root>
    <datasources>
        <ds name="idCenterDS"
            driverClassName="com.mysql.jdbc.Driver"
            url="${jdbc.url}"
            username="${jdbc.username}"
            password="${jdbc.password}"
            maxActive=""
            maxIdle=""
            maxWait=""
                />

        <ds name="master"
            driverClassName="com.mysql.jdbc.Driver"
            url="${jdbc.url}"
            username="${jdbc.username}"
            password="${jdbc.password}"
            maxActive=""
            maxIdle=""
            maxWait=""
                />
        <ds name="slave"
            driverClassName="com.mysql.jdbc.Driver"
            url="${jdbc.url}"
            username="${jdbc.username}"
            password="${jdbc.password}"
            maxActive=""
            maxIdle=""
            maxWait=""
                />
    </datasources>
    <groups>
        <group name="g2" master="master" slave="slave"/>
        <group name="g3" master="master" slave="slave"/>
    </groups>
</root>