<?xml version="1.0"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="logconsole" class="org.apache.log4j.ConsoleAppender">
        <param name="encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%p %d{yyyyMMddHHmmss} %c %t %m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMax" value="error"></param>
            <param name="LevelMin" value="info"></param>
            <param name="AcceptOnMatch" value="true"/>
        </filter>
    </appender>

    <appender name="logfile" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="encoding" value="UTF-8"/>
        <param name="File" value="${log4j.path}/phoenix-knowledge/normal.log"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd'.log'"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="[%-5p] %d{yyyy-MM-dd HH:mm:ss,SSS} method:%l%n%m%n"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="LevelMax" value="error"></param>
            <param name="LevelMin" value="info"></param>
            <param name="AcceptOnMatch" value="true"/>
        </filter>
    </appender>


    <appender name="interfaceLog" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="encoding" value="UTF-8"/>
        <param name="File" value="${log4j.path}/phoenix-knowledge/interfaceLog.log"/>
        <param name="DatePattern" value="'.'yyyy-MM-dd'.log'"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="[%d{MMdd HH:mm:ss SSS\} %-5p] [%t] %c{3\} -%m%n"/>
        </layout>
        <param name="Threshold" value="info"></param>
    </appender>

    <logger name="com.gintong.frame.util" additivity="false">
        <level value="info"/>
        <appender-ref ref="interfaceLog"/>
    </logger>

    <root>
        <level value="${log4j.level}"/>
        <appender-ref ref="logconsole"/>
        <appender-ref ref="logfile"/>
    </root>
</log4j:configuration>
