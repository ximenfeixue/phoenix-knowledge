<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ginkgocap.ywxt.knowledge.mapper.ColumnVisibleValueMapper">

	<update id="update" parameterType="java.util.Map">
		UPDATE tb_column_visible t SET t.state= #{state} ,t.utime=#{utime}
		WHERE t.user_id=#{userId} and t.pcid=#{pcid}
		<if test="instate==0">
			and t.column_id in
			<foreach collection="listl" index="index" item="tag" open="("
				separator="," close=")">
				#{tag}
			</foreach>
		</if>
		<if test="instate==1">
			and t.column_id not in
			<foreach collection="listl" index="index" item="tag" open="("
				separator="," close=")">
				#{tag}
			</foreach>
		</if>
	</update>

</mapper>