<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:c="http://www.springframework.org/schema/c"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
	
	
	<bean id="urlMapping"
		class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="/category/">categoryExporter</prop>
				<prop key="/article/">articleExporter</prop>
				<prop key="/share/">shareExporter</prop>
				<prop key="/favorites/">favoritesExporter</prop>
			</props>
		</property>
	</bean>
	<bean id="categoryExporter" 
	      class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
	              <property name="service" ref="categoryService"/>
	              <property name="serviceInterface" value="com.ginkgocap.ywxt.knowledge.service.category.CategoryService"/>
	</bean>
	
	<bean id="articleExporter" 
	      class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
	              <property name="service" ref="articleService"/>
	              <property name="serviceInterface" value="com.ginkgocap.ywxt.knowledge.service.article.ArticleService"/>
	</bean>
	
	<bean id="shareExporter" 
	      class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
	              <property name="service" ref="knowledgeShareService"/>
	              <property name="serviceInterface" value="com.ginkgocap.ywxt.knowledge.service.share.KnowledgeShareService"/>
	</bean>
	
	<bean id="favoritesExporter" 
	      class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
	              <property name="service" ref="favoritesService"/>
	              <property name="serviceInterface" value="com.ginkgocap.ywxt.knowledge.service.favorites.FavoritesService"/>
	</bean>
</beans>
