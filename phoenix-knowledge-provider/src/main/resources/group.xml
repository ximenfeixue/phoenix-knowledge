<?xml version="1.0" encoding="GB2312"?>
<root>
	<datasources>
		<ds name="idCenterDS" 
			driverClassName="com.mysql.jdbc.Driver"
            url="${jdbc.url}"
            username="${jdbc.username}"
            password="${jdbc.password}"
			maxActive="100"
			maxIdle="50"
			maxWait="5"
		    testOnBorrow="false"
			testOnReturn="true"
			testWhileIdle="true"
			logAbandoned="true"
			removeAbandoned="true"
			removeAbandonedTimeout="120"
			validationQuery = "SELECT 1"
			timeBetweenEvictionRunsMillis = "3600000"
			minEvictableIdleTimeMillis = "18000000"
		/>
        
		<ds name="master" 
			driverClassName="com.mysql.jdbc.Driver"
            url="${jdbc.url}"
			username="${jdbc.username}"
			password="${jdbc.password}"
			maxActive="100"
			maxIdle="50"
			maxWait="5"
			testOnBorrow="false"
			testOnReturn="true"
			testWhileIdle="true"
			logAbandoned="true"
			removeAbandoned="true"
			removeAbandonedTimeout="120"
			validationQuery = "SELECT 1"
			timeBetweenEvictionRunsMillis = "3600000"
			minEvictableIdleTimeMillis = "18000000"
		/>
		<ds name="slave" 
			driverClassName="com.mysql.jdbc.Driver"
            url="${jdbc.url}"
			username="${jdbc.username}"
			password="${jdbc.password}"
			maxActive="100"
			maxIdle="50"
			maxWait="5"
			testOnBorrow="false"
			testOnReturn="true"
			testWhileIdle="true"
			logAbandoned="true"
			removeAbandoned="true"
			removeAbandonedTimeout="120"
			validationQuery = "SELECT 1"
			timeBetweenEvictionRunsMillis = "3600000"
			minEvictableIdleTimeMillis = "18000000"
		/>
	</datasources>
	<groups>
		<group name="g2" master="master" slave="slave"/>	
		<group name="g3" master="master" slave="slave"/>	
	</groups>
</root>

