<?xml version="1.0" encoding="GB2312"?>
<root>
	<datasources>
		<ds name="idCenterDS" 
			driverClassName="com.mysql.jdbc.Driver"
            url="${jdbc.url}"
            username="${jdbc.username}"
            password="${jdbc.password}"
			maxActive="10"
			maxIdle="60000"
			maxWait="60000"
			maxIdleTime="1800"
			defaultAutoCommit="true"
			defaultReadOnly="false"
			testOnBorrow="true"
			validationQuery="select 1"
		/>
        
		<ds name="master" 
			driverClassName="com.mysql.jdbc.Driver"
            url="${jdbc.url}"
			username="${jdbc.username}"
			password="${jdbc.password}"
			maxActive="10"
			maxIdle="60000"
			maxWait="60000"
			maxIdleTime="1800"
			defaultAutoCommit="true"
			defaultReadOnly="false"
			testOnBorrow="true"
			validationQuery="select 1"
		/>
		<ds name="slave" 
			driverClassName="com.mysql.jdbc.Driver"
            url="${jdbc.url}"
			username="${jdbc.username}"
			password="${jdbc.password}"
			maxActive="10"
			maxIdle="60000"
			maxWait="60000"
			maxIdleTime="1800"
			defaultAutoCommit="true"
			defaultReadOnly="false"
			testOnBorrow="true"
			validationQuery="select 1"
		/>
	</datasources>
	<groups>
		<group name="g2" master="master" slave="slave"/>	
		<group name="g3" master="master" slave="slave"/>	
	</groups>
</root>

