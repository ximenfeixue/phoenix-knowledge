<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="tb_column_knowledge">
	<typeAlias alias="columnknowledge" type="com.ginkgocap.ywxt.knowledge.model.ColumnKnowledge"/>
	<resultMap class="com.ginkgocap.ywxt.knowledge.model.ColumnKnowledge" id="knowledgecolumnMap">
		<result column="column_id" property="column_id" jdbcType="BIGINT"/>
		<result column="knowledge_id" property="knowledge_id" jdbcType="BIGINT"/>
		<result column="user_id" property="user_id" jdbcType="INT"/>
		<result column="type" property="type" jdbcType="INT"/>
	</resultMap>
	
	<sql id="dyColumns">column_id,knowledge_id,user_id,type</sql>
	
    <delete id="delete" parameterClass="java.util.Map">
    delete from tb_column_knowledge 
     where  column_id=#column_id:BIGINT# 
     and  knowledge_id in 
      <iterate property="knowledgeids" open="(" close=")" conjunction=",">#knowledgeids[]#</iterate>
    </delete>
    
     <delete id="deleteknowledgeid" parameterClass="java.util.Map">
    delete from tb_column_knowledge 
     where  column_id=#column_id:BIGINT# 
     and  knowledge_id =#knowledge_id:BIGINT# 
    </delete>

	<insert id="insert" parameterClass="com.ginkgocap.ywxt.knowledge.model.ColumnKnowledge">
		insert into tb_column_knowledge(
			column_id,
			knowledge_id,
			user_id,
			type
			
		) values (
			#column_id:BIGINT#,
			#knowledge_id:BIGINT#,
			#user_id:INT#,
			#type:INT#
			
		)
	</insert>

</sqlMap>