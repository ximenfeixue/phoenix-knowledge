<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="tb_knowledge_collection">
	<typeAlias alias="knowledgecollection" type="com.ginkgocap.ywxt.knowledge.model.KnowledgeCollection"/>
	<resultMap class="com.ginkgocap.ywxt.knowledge.model.KnowledgeCollection" id="knowledgecollectionMap">
		<result column="id" property="id" jdbcType="BIGINT"/>
		<result column="knowledge_id" property="knowledge_id" jdbcType="BIGINT"/>
		<result column="column_id" property="column_id" jdbcType="BIGINT"/>
		<result column="timestamp" property="timestamp" jdbcType="TIMESTAMP"/>
		<result column="knowledgeType" property="knowledgeType" jdbcType="VARCHAR"/>
		<result column="source" property="source" jdbcType="VARCHAR"/>
		<result column="category_id" property="category_id" jdbcType="BIGINT"/>
		
	</resultMap>
	
	<sql id="dyColumns">id,knowledge_id,column_id,timestamp,knowledgeType,source,category_id</sql>
	
	
	<insert id="insert" parameterClass="knowledgecollection">
		insert into tb_knowledge_collection(
			knowledge_id,
			column_id,
			timestamp,
			knowledgeType,
			source,
			category_id
			
		) values (
			#knowledge_id:BIGINT#,
			#column_id:BIGINT#,
			#timestamp:TIMESTAMP#,
			#knowledgeType:VARCHAR#,
			#source:VARCHAR#,
			#category_id:BIGINT#
		)
		<selectKey resultClass="long" type="post" keyProperty="id" > 
		SELECT LAST_INSERT_ID() AS VALUE     
		</selectKey>
	</insert>

</sqlMap>