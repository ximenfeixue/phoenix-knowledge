	<bean id="jedisPoolConfig" class="redis.clients.jedis.JedisPoolConfig">
		<property name="maxActive" value="2000" />
		<property name="maxIdle" value="50" />
		<property name="maxWait" value="1000" />
		<property name="testOnBorrow" value="true" />
	</bean>

	<bean id="jedis.shardInfo" class="redis.clients.jedis.JedisShardInfo">
		<constructor-arg index="0" value="${redis.host}" />
		<constructor-arg index="1" value="${redis.port}" />
	</bean>

	<bean id="jedisPool" class="redis.clients.jedis.ShardedJedisPool">
		<constructor-arg index="0" ref="jedisPoolConfig" />
		<constructor-arg index="1">
			<list>
				<ref bean="jedis.shardInfo" />
			</list>
		</constructor-arg>
	</bean>
	<bean id="jedisCacheClient" class="com.ginkgocap.ywxt.knowledge.util.JedisCacheClient">
		<property name="jedisPool" ref="jedisPool"></property>
	</bean>
	<!-- 不分片的redis客户端，管理使用 -->
	<bean id="singleClient" class="redis.clients.jedis.Client">
		<constructor-arg index="0" value="${redis.host}" />
		<constructor-arg index="1" value="${redis.port}" />
	</bean>
	<bean id="cache" class="com.ginkgocap.ywxt.cache.Cache">
		<property name="jedisPool" ref="jedisPool"></property>
		<!-- <property name="memcachedClient" ref="memcachedClient"></property> -->
        <property name="local" value="true"></property>
        <property name="localTTL" value="1000000"></property>
	</bean>
	<bean id="sessionManager" class="com.ginkgocap.ywxt.util.sso.session.SessionManager">
	
	</bean>
	
</beans>